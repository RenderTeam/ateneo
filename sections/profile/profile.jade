doctype html
.col-md-4
  h3 Gladiador
  h3(ng-bind = 'username')
  br
  br
  ul.nav.nav-tabs
    li.active
      a(
        data-target = '#studyGroup'
        data-toggle ='tab'
        href        = ''
      ) Grupos de Estudio
    li
      a(
        data-target = '#events'
        data-toggle ='tab'
        href        = ''
      ) Eventos

  .tab-content
    #studyGroup.tab-pane.fade.in.active
      div.list-group( ng-repeat = 'studyGroup in studyGroups')
        a.list-group-item(
          href=''
          ng-click = 'studyGroupView( studyGroup )'
          ng-bind = 'studyGroup.name')
      a.btn.btn-success.pull-right(
        href = '/#/study-groups'
      ) Nuevo Grupo Estudio

    #events.tab-pane.fade
      div.list-group( ng-repeat = 'event in events')
        a.list-group-item(
          href=''
          ng-click = 'eventView( event )'
          ng-bind = 'event.name')

.col-md-8
  .col-med-12.text-center( ng-show = 'view === 0 ? true:false')
    h2 Selecciona un grupo de estudio o un evento

  .col-med-12.text-center( ng-show = 'view === 1 ? true:false')
    h1(ng-bind = 'selectEvent.name')
    .super-text
      timer(countdown='lu', max-d-unit='"day"', interval='1000') {{ddays}}:{{hhours}}:{{mminutes}}:{{sseconds}}
      br
      | $
      span( ng-bind = 'selectEvent.jackpot')
      br
      button.btn.btn-success.btn-lg.btn-warning( ng-click='openEvent(selectEvent._id)')
        .glyphicon.glyphicon-screenshot
        br
        | Ir a Evento

  .col-med-12.text-center( ng-show = 'view === 2 ? true:false')
    h2(ng-bind = 'selectGroup.name')
    h4 Tema
    .col-md-6
      h3 Usuarios
      br
      span( ng-repeat = 'user in selectGroup.users' )
        label(ng-bind = 'user')
        hr
    .col-md-6
      h3 Proximos eventos &nbsp
      br
      span( ng-repeat = 'event in selectGroup.events' )
        label(ng-bind = 'event')
        hr
    p.clearfix
    button.btn.btn-success(ng-click = 'openGroup(selectGroup._id)')
      .glyphicon.glyphicon-list-alt &nbsp Ir al Grupo de Estudio
